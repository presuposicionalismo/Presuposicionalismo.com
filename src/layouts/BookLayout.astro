---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import BookCover3D from "../components/BookCover3D.astro";
import BookActions from "../components/BookActions.astro";
import BookDetails from "../components/BookDetails.astro";
import ProductInfo from "../components/ProductInfo.astro";
import AuthorCard from "../components/AuthorCard.astro";
import "../styles/global.css";

// SpeedInsights of vercel
import SpeedInsights from "@vercel/speed-insights/astro";

type Props = CollectionEntry<"libros">["data"] & { slug?: string };

const { title, description, pubDate, coverBook, downloadBook, slug, author } =
  Astro.props;

// Determine OG Image
const ogImage = slug ? `/og/libros/${slug}.png` : "/Portada.png";
---

<html lang="es">
  <head>
    <BaseHead title={title} description={description} image={ogImage} />
  </head>

  <body>
    <Header />

    <main
      class="flex-grow w-full max-w-[1280px] mx-auto px-6 md:px-10 py-8 md:py-12"
    >
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-10 lg:gap-16">
        <!-- Left Column: Book Cover & Actions (40% width on LG) -->
        <div class="lg:col-span-5 flex flex-col gap-8">
          <BookCover3D
            coverBook={String(coverBook)}
            title={title}
            transition:name={`coverbook ${title} image`}
          />
          <BookActions downloadBook={downloadBook} />
        </div>

        <!-- Right Column: Details (60% width on LG) -->
        <div class="lg:col-span-7 flex flex-col">
          <BookDetails
            title={title}
            author={author}
            description={description}
          />
          <ProductInfo pubDate={pubDate} />

          <!-- Author Card -->
          <AuthorCard
            name={author}
            bio={`${author} es un destacado autor en el campo de la apologética reformada y la teología cristiana.`}
            profileUrl="/libros"
          />
        </div>
      </div>

      <!-- Divider -->
      <div class="h-px bg-border w-full my-16"></div>

      <!-- Content Section -->
      <article
        class="max-w-4xl mx-auto prose prose-lg prose-slate max-w-none
                     prose-headings:serif-text prose-headings:font-bold prose-headings:text-accent
                     prose-p:text-foreground prose-p:leading-relaxed
                     prose-a:text-accent prose-a:no-underline hover:prose-a:underline
                     prose-strong:text-accent prose-strong:font-semibold
                     prose-blockquote:border-l-4 prose-blockquote:border-accent
                     prose-blockquote:bg-surface prose-blockquote:py-4 prose-blockquote:px-6
                     prose-blockquote:rounded-r-lg prose-blockquote:not-italic
                     prose-code:text-accent prose-code:bg-surface
                     prose-code:px-1.5 prose-code:py-0.5 prose-code:rounded prose-code:text-sm
                     prose-hr:border-border"
      >
        <slot />
      </article>
    </main>

    <Footer />
    <SpeedInsights />
  </body>
</html>
