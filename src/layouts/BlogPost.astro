---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ShareSidebar from "../components/ShareSidebar.astro";
import AuthorCard from "../components/AuthorCard.astro";
import RelatedArticles from "../components/RelatedArticles.astro";
import NewsletterCTA from "../components/NewsletterCTA.astro";
import ArticleHeader from "../components/ArticleHeader.astro";
import "../styles/global.css";

// SpeedInsights of vercel
import SpeedInsights from "@vercel/speed-insights/astro";

type Props = CollectionEntry<"blog">["data"] & { slug?: string };

const { title, description, pubDate, heroImage, slug, tags } = Astro.props;

// Determine OG Image
const ogImage = slug ? `/og/blog/${slug}.png` : "/Portada.png";
---

<html lang="es">
  <head>
    <BaseHead title={title} description={description} image={ogImage} />
  </head>

  <body>
    <!-- Scroll Progress Bar -->
    <div class="fixed top-0 left-0 h-1 bg-accent z-50" id="progress-bar"></div>

    <Header />

    <!-- Main Content Area -->
    <main class="flex flex-col items-center w-full pt-12 pb-24">
      <!-- Article Container -->
      <article class="w-full max-w-[800px] px-5 md:px-0 flex flex-col gap-10">
        <!-- Article Header -->
        <ArticleHeader title={title} pubDate={pubDate} tags={tags} />

        <!-- Featured Image -->
        {
          heroImage && (
            <figure class="w-full">
              <div class="w-full aspect-[21/9] bg-surface rounded-lg overflow-hidden relative">
                <img
                  src={heroImage}
                  alt={title}
                  class="w-full h-full object-cover"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent" />
              </div>
            </figure>
          )
        }

        <!-- Body Layout Wrapper -->
        <div class="relative w-full">
          <!-- Floating Sidebar (Desktop) -->
          <ShareSidebar />

          <!-- Typography Content -->
          <div class="prose-content">
            <slot />
          </div>
        </div>

        <!-- Footer Section of Article -->
        <footer class="mt-16 flex flex-col gap-16">
          <!-- Divider -->
          <div class="w-full h-px bg-border"></div>

          <!-- Author Bio -->
          <AuthorCard />

          <!-- Related Articles -->
          <RelatedArticles />

          <!-- Newsletter CTA -->
          <NewsletterCTA />

          <!-- Back to Blog Link -->
          <div class="text-center">
            <a
              href="/blog"
              class="inline-flex items-center gap-2 text-sm font-medium text-accent hover:underline"
            >
              <span class="material-icons-outlined text-[18px]">arrow_back</span
              >
              Volver al blog
            </a>
          </div>
        </footer>
      </article>
    </main>

    <Footer />
    <SpeedInsights />

    <!-- Scroll Progress Script -->
    <script is:inline>
      window.addEventListener("scroll", function () {
        let winScroll =
          document.body.scrollTop || document.documentElement.scrollTop;
        let height =
          document.documentElement.scrollHeight -
          document.documentElement.clientHeight;
        let scrolled = (winScroll / height) * 100;
        const progressBar = document.getElementById("progress-bar");
        if (progressBar) {
          progressBar.style.width = scrolled + "%";
        }
      });
    </script>
  </body>
</html>
