---
import HeaderLink from "./HeaderLink.astro";
import DarkToggle from "./DarkToggle.astro";
import ThemeSwitcher from "$lib/components/ThemeSwitcher.svelte";
import Logo from "./Logo.astro";
---

<header
  class="sticky top-0 z-50 bg-background/80 backdrop-blur-md border-b border-border transition-colors duration-300"
>
  <div class="max-w-7xl mx-auto px-6 h-20 flex items-center justify-between">
    <div class="flex items-center gap-4">
      <a class="flex items-center gap-2 group" href="/">
        <Logo />
      </a>
    </div>
    <div class="hidden md:flex flex-1 justify-end items-center gap-8">
      <nav class="flex items-center gap-8">
        <HeaderLink
          href="/"
          class="text-sm font-medium hover:text-accent transition-colors pb-1"
          >Inicio</HeaderLink
        >
        <HeaderLink
          href="/blog"
          class="text-sm font-medium text-muted hover:text-accent transition-colors pb-1"
          >Blog</HeaderLink
        >
        <HeaderLink
          href="/libros"
          class="text-sm font-medium text-muted hover:text-accent transition-colors pb-1"
          >Libros</HeaderLink
        >
        <ThemeSwitcher client:load />
        <DarkToggle />
      </nav>
      <!-- <button
        class="px-6 py-2.5 bg-accent text-background text-xs font-bold uppercase tracking-widest hover:opacity-90 transition-opacity border border-transparent"
      >
        Donar
      </button> -->
    </div>

    <button
      id="mobile-menu-btn"
      class="md:hidden p-2 text-primary dark:text-white"
      aria-label="Menu"
    >
      <span class="material-symbols-outlined text-2xl">menu</span>
    </button>
  </div>

  <!-- Mobile Menu Overlay -->
  <div
    id="mobile-menu"
    class="fixed inset-0 z-[100] transform translate-x-full transition-transform duration-300 md:hidden flex flex-col"
  >
    <div class="flex items-center justify-between p-6 border-b border-border">
      <div class="flex items-center gap-2">
        <span class="text-xl font-bold tracking-tight">Menú</span>
      </div>
      <button
        id="close-menu-btn"
        class="p-2 text-primary dark:text-white"
        aria-label="Cerrar menú"
      >
        <span class="material-symbols-outlined text-2xl">close</span>
      </button>
    </div>

    <nav class="flex flex-col p-6 gap-6">
      <a
        href="/"
        class="text-2xl font-display font-medium text-primary dark:text-white hover:text-accent transition-colors"
        >Inicio</a
      >
      <a
        href="/blog"
        class="text-2xl font-display font-medium text-primary dark:text-white hover:text-accent transition-colors"
        >Blog</a
      >
      <a
        href="/libros"
        class="text-2xl font-display font-medium text-primary dark:text-white hover:text-accent transition-colors"
        >Libros</a
      >

      <div
        class="pt-6 border-t border-border flex items-center justify-between"
      >
        <span class="text-lg font-medium text-secondary dark:text-gray-400"
          >Apariencia</span
        >
        <div class="flex items-center gap-4">
          <ThemeSwitcher client:load />
          <DarkToggle />
        </div>
      </div>
    </nav>
  </div>
</header>

<script>
  const mobileMenuBtn = document.getElementById("mobile-menu-btn");
  const closeMenuBtn = document.getElementById("close-menu-btn");
  const mobileMenu = document.getElementById("mobile-menu");

  // Move menu to body to avoid stacking context issues
  if (mobileMenu && document.body) {
    document.body.appendChild(mobileMenu);
  }

  function toggleMenu() {
    mobileMenu?.classList.toggle("translate-x-full");
    const isOpen = !mobileMenu?.classList.contains("translate-x-full");
    document.body.style.overflow = isOpen ? "hidden" : "";
  }

  mobileMenuBtn?.addEventListener("click", toggleMenu);
  closeMenuBtn?.addEventListener("click", toggleMenu);

  // Close menu when clicking links (delegation since we moved the menu)
  mobileMenu?.querySelectorAll("a").forEach((link) => {
    link.addEventListener("click", () => {
      toggleMenu();
    });
  });
</script>
