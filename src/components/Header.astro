---
import NavMenu from "./NavMenu.astro";

import Dropdown from "./Dropdown.astro";
import Logo from "./Logo.astro";
---

<header>
  <a class="logo" aria-label="logo" href="/"><Logo /></a>

  <nav>
    <NavMenu />

    <Dropdown />
  </nav>
</header>

<style>
  .logo {
    min-width: 100px;
    width: 150px;
  }

  header {
    align-items: center;
    background-color: var(--surface-2);
    box-shadow: var(--shadow-3);
    display: flex;
    justify-content: space-between;
    padding: var(--size-fluid-1);
    padding-inline: 5vw;
  }

  nav {
    align-items: center;
    display: flex;
    justify-content: end;
  }
</style>
