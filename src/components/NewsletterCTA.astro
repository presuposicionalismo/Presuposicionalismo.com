---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Profundice en su fe",
  description = "Reciba artículos semanales sobre apologética, teología y filosofía cristiana directamente en su bandeja de entrada.",
} = Astro.props;
---

<div
  class="bg-accent rounded-2xl p-8 md:p-12 text-center relative overflow-hidden"
>
  <div class="relative z-10 max-w-lg mx-auto flex flex-col gap-6">
    <div class="mx-auto bg-background/10 p-3 rounded-full w-fit">
      <span class="material-icons-outlined text-background text-3xl">mail</span>
    </div>
    <div>
      <h3 class="text-2xl font-bold text-background mb-2">{title}</h3>
      <p class="text-background/70 text-sm">
        {description}
      </p>
    </div>
    <form class="flex flex-col sm:flex-row gap-3 w-full">
      <input
        class="flex-1 rounded-lg border-0 px-4 py-3 text-sm focus:ring-2 focus:ring-accent text-foreground placeholder:text-muted bg-background"
        placeholder="Su correo electrónico"
        type="email"
        name="email"
      />
      <button
        class="bg-background text-accent font-medium px-6 py-3 rounded-lg text-sm transition-opacity hover:opacity-90 whitespace-nowrap"
        type="submit"
      >
        Suscribirse
      </button>
    </form>
    <p class="text-[10px] text-background/60">
      Respetamos su privacidad. Cancele su suscripción en cualquier momento.
    </p>
  </div>
  <!-- Decorative background pattern -->
  <div
    class="absolute top-0 left-0 w-full h-full opacity-10 pointer-events-none"
    style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 24px 24px;"
  >
  </div>
</div>
