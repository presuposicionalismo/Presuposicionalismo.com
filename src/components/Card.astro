---
import FormattedDate from "./FormattedDate.astro";
const { title, description, pubDate, heroImage, slug } = Astro.props;

---

<section class="container bg">
  <article class="card">
    <div class="card__image rad-shadow">
      <img src={heroImage} alt="Imagen" />
    </div>

    <div>
      <span><FormattedDate date={pubDate} /></span>
      <h1 class="card__title">{title}</h1>
      <p class="card__text">{description}</p>
      <a class="token string" href={`/blog/${slug}/`}>Leer mas</a>
      </p>
    </div>
  </article>
</section>

