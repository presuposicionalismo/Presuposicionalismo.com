---
import CoverBook from "./CoverBook.astro";

interface Props {
  coverBook: string;
  title: string;
}

const { coverBook, title } = Astro.props;
---

<div
  class="relative w-full aspect-[3/4] flex items-center justify-center p-8 bg-surface rounded-xl shadow-sm border border-border"
>
  <!-- 3D book cover with shadow -->
  <div
    class="relative w-[70%] h-[85%] shadow-[15px_20px_40px_-5px_rgba(0,0,0,0.3)] rounded-r-md transform transition hover:scale-[1.02] duration-300"
  >
    <CoverBook
      imagePath={String(coverBook)}
      altText={title}
      class="w-full h-full object-cover rounded-r-md"
    />
    <!-- Spine effect -->
    <div
      class="absolute top-0 left-0 w-4 h-full bg-gradient-to-r from-gray-300 to-gray-100 opacity-30 -translate-x-full rounded-l-sm"
    >
    </div>
  </div>
</div>
