---
interface Props {
	date: Date;
}

const { date } = Astro.props;
---

<div>
	<span>
		<svg
			xmlns="http://www.w3.org/2000/svg"
			width="24"
			height="24"
			viewBox="0 0 24 24"
			><path
				fill="none"
				stroke="currentColor"
				stroke-linecap="round"
				stroke-linejoin="round"
				stroke-width="1"
				d="M4 7a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2zm12-4v4M8 3v4m-4 4h16M7 14h.013m2.997 0h.005m2.995 0h.005m3 0h.005m-3.005 3h.005m-6.01 0h.005m2.995 0h.005"
			></path></svg
		>
	</span>
	<span>
		<time datetime={date.toISOString()}>
			{
				date.toLocaleDateString("es-co", {
					year: "numeric",
					month: "short",
					day: "numeric",
				})
			}
		</time>
	</span>
</div>

<style>
	div {
		display: flex;
		gap: 6px;
	}
	time {
		margin-left: auto;
		margin-right: auto;
		max-width: 100%;
		padding-bottom: var(--size-fluid-1);
		font-size: var(--font-size-sm);
		font-weight: var(--font-weight-4);

		text-indent: 1rem;
	}
</style>
