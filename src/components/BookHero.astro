---
import FormattedDate from "./FormattedDate.astro";
const { title, description, pubDate, coverBook, author } = Astro.props;
import CoverBook from "./CoverBook.astro";
---

<section class="max-w-7xl mx-auto px-6 py-12">
  <div class="grid md:grid-cols-2 gap-12 items-start">
    <div class="sticky top-24">
      <div
        class="aspect-[3/4] rounded-lg overflow-hidden shadow-xl border border-border"
      >
        <CoverBook
          imagePath={coverBook}
          altText={title}
          class="w-full h-full object-cover"
        />
      </div>
    </div>

    <div class="space-y-6">
      <div
        class="flex items-center gap-2 text-sm text-muted uppercase tracking-wide"
      >
        <span class="material-icons-outlined text-base">calendar_today</span>
        <FormattedDate date={pubDate} />
      </div>

      <h1
        class="serif-text text-4xl md:text-5xl font-medium text-accent leading-tight"
      >
        {title}
      </h1>

      <p class="text-lg text-muted font-medium">
        {author}
      </p>

      <p class="text-lg text-foreground leading-relaxed">
        {description}
      </p>
    </div>
  </div>
</section>

<hr class="border-border max-w-7xl mx-auto" />
