---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  imagePath: string;
  altText: string;
  loading?: "lazy" | "eager";
}

const { imagePath, altText, loading = "lazy" } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/coverbook/*.{jpeg,jpg,png,gif,webp}",
);
if (!images[imagePath])
  throw new Error(
    `"${imagePath}" does not exist in glob: "/src/assets/coverbook/*.{jpeg,jpg,png,gif}"`,
  );
---

<div class="card">
  <Image
    src={images[imagePath]()}
    alt={altText}
    class="coverbook"
    loading={loading}
  />
</div>
