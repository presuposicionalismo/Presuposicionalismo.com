---
export interface Props {
  currentPage: number;
  totalPages: number;
  baseUrl: string;
}

const { currentPage, totalPages, baseUrl } = Astro.props;

const prevPage = currentPage > 1 ? currentPage - 1 : null;
const nextPage = currentPage < totalPages ? currentPage + 1 : null;
---

<nav aria-label="Paginación del blog" class="pagination">
  <ul class="pagination__list">
    {prevPage && (
      <li>
        <a href={`${baseUrl}/${prevPage}`} class="pagination__link pagination__link--prev">
          Anterior
        </a>
      </li>
    )}
    {Array.from({ length: totalPages }, (_, i) => i + 1).map((pageNum) => (
      <li>
        <a
          href={`${baseUrl}/${pageNum}`}
          class={`pagination__link ${pageNum === currentPage ? 'pagination__link--active' : ''}`}
          aria-current={pageNum === currentPage ? 'page' : undefined}
        >
          {pageNum}
        </a>
      </li>
    ))}
    {nextPage && (
      <li>
        <a href={`${baseUrl}/${nextPage}`} class="pagination__link pagination__link--next">
          Siguiente
        </a>
      </li>
    )}
  </ul>
</nav>

<style>
  /* Estilos usando Open Props */
  @import "open-props/style";

  .pagination {
    margin-block: var(--size-fluid-3);
  }

  .pagination__list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--size-2);
    list-style: none;
    padding: 0;
  }

  .pagination__link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: var(--size-fluid-4);
    height: var(--size-fluid-4);
    padding-inline: var(--size-2);
    border-radius: var(--radius-2);
    background-color: var(--surface-2);
    color: var(--text-2);
    text-decoration: none;
    font-weight: var(--font-weight-5);
    transition: background-color 0.2s ease;
  }

  .pagination__link:hover,
  .pagination__link:focus {
    background-color: var(--surface-3);
  }

  .pagination__link--active {
    background-color: var(--brand);
    color: var(--text-1);
  }

  .pagination__link--prev::before {
    content: "←";
    margin-right: var(--size-1);
  }

  .pagination__link--next::after {
    content: "→";
    margin-left: var(--size-1);
  }

  @media (max-width: 768px) {
    .pagination__link {
      min-width: var(--size-fluid-3);
      height: var(--size-fluid-3);
      font-size: var(--font-size-0);
    }
  }
</style>