---
import { slugifyStr } from "@utils/slugify";

interface Props {
  tags: string[];
  activeTag?: string;
}

const { tags, activeTag } = Astro.props;
---

<div class="w-full overflow-x-auto pb-4 mb-12 scrollbar-hide">
  <div class="flex gap-3 min-w-max px-1">
    <a
      href="/blog"
      class:list={[
        "px-5 py-2 rounded-full text-sm font-medium transition-all duration-300 border",
        !activeTag
          ? "bg-accent text-white border-accent shadow-md shadow-accent/20"
          : "bg-surface text-secondary border-border hover:border-accent/50 hover:text-primary",
      ]}
    >
      Todos
    </a>
    {
      tags.map((tag) => {
        const isActive = activeTag === tag;
        return (
          <a
            href={`/tags/${slugifyStr(tag)}`}
            class:list={[
              "px-5 py-2 rounded-full text-sm font-medium transition-all duration-300 border capitalize",
              isActive
                ? "bg-accent text-white border-accent shadow-md shadow-accent/20"
                : "bg-surface text-secondary border-border hover:border-accent/50 hover:text-primary",
            ]}
          >
            {tag}
          </a>
        );
      })
    }
  </div>
</div>

<style>
  /* Hide scrollbar for Chrome, Safari and Opera */
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
  /* Hide scrollbar for IE, Edge and Firefox */
  .scrollbar-hide {
    -ms-overflow-style: none; /* IE and Edge */
    scrollbar-width: none; /* Firefox */
  }
</style>
