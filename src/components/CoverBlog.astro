---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  imagePath: string;
  altText: string;
}

const { imagePath, altText } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/coverblog/*.{jpeg,jpg,png,gif,webp}",
);
if (!images[imagePath])
  throw new Error(
    `"${imagePath}" does not exist in glob: "/src/assets/coverblog/*.{jpeg,jpg,png,gif,webp}"`,
  );
---

<div class="card">
  <Image src={images[imagePath]()} alt={altText} class="coverblog" />
</div>

<style>
  .coverblog {
    border-radius: var(--radius-3);
    height: 14rem;
    max-width: 100%; /* Asegurarse de que la imagen se ajuste al ancho de la columna */
    object-fit: cover;
    width: 18rem;
  }
</style>
