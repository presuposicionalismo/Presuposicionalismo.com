---
import MainLayout from "@layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import FormattedDate from "@components/FormattedDate.astro";
import CoverBlog from "@components/CoverBlog.astro";
import Pagination from "@components/Pagination.astro";
import type { GetStaticPaths } from "astro";
import { slugifyStr } from "@utils/slugify";
import { SITE_DESCRIPTION } from "../../../consts";
import postFilter from "@utils/postFilter";

export const getStaticPaths = (async ({ paginate }) => {
  const posts = await getCollection("blog", postFilter);
  const sortedPosts = posts.sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
  );
  return paginate(sortedPosts, { pageSize: 6 });
}) satisfies GetStaticPaths;

const { page } = Astro.props;

// Data for Sidebar (reuse filtered posts)
const allPosts = await getCollection("blog", postFilter);
// Tags logic
const tagCounts = allPosts.reduce(
  (acc: Record<string, number>, post) => {
    if (post.data.tags) {
      post.data.tags.forEach((tag) => {
        acc[tag] = (acc[tag] || 0) + 1;
      });
    }
    return acc;
  },
  {} as Record<string, number>,
);

const sortedTags = Object.keys(tagCounts)
  .sort((a, b) => tagCounts[b] - tagCounts[a])
  .slice(0, 8); // Top 8

// Recent/Popular posts logic (Simple: Recent for now)
const recentPosts = allPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<MainLayout title="Artículos" description={SITE_DESCRIPTION}>
  <div class="layout-container flex flex-col min-h-screen">
    <div class="px-6 md:px-12 lg:px-24 py-16">
      <div class="max-w-7xl mx-auto">
        <div
          class="mb-16 border-b border-border-light dark:border-gray-800 pb-12"
        >
          <span
            class="block text-xs font-bold uppercase tracking-[0.2em] text-secondary mb-4"
            >Blog & Ensayos</span
          >
          <h1
            class="text-5xl md:text-7xl font-display font-medium text-primary dark:text-white mb-6"
          >
            Artículos
          </h1>
          <p
            class="text-lg md:text-xl text-secondary dark:text-gray-400 font-display italic max-w-3xl leading-relaxed"
          >
            Exploraciones profundas sobre la fe, la razón y la presuposición,
            analizando la cultura desde una óptica consistentemente reformada.
          </p>
        </div>

        <div class="flex flex-col lg:flex-row gap-16">
          <aside class="w-full lg:w-72 shrink-0 space-y-12">
            <div class="relative group">
              <input
                type="text"
                placeholder="Buscar en artículos..."
                class="w-full bg-transparent border-b border-gray-300 dark:border-gray-700 py-2 pl-0 pr-8 text-sm focus:border-black dark:focus:border-white focus:ring-0 placeholder:text-gray-400 transition-colors font-display outline-none"
              />
              <span
                class="material-symbols-outlined absolute right-0 top-2 text-gray-400 text-lg"
                >search</span
              >
            </div>

            <div>
              <h3
                class="font-display text-lg font-medium mb-6 text-primary dark:text-white border-b border-gray-100 dark:border-gray-800 pb-2"
              >
                Categorías
              </h3>
              <ul class="space-y-3">
                {
                  sortedTags.map((tag) => (
                    <li>
                      <a
                        href={`/tags/${slugifyStr(tag)}`}
                        class="flex items-center justify-between group cursor-pointer"
                      >
                        <span class="text-sm text-secondary group-hover:text-primary group-hover:font-medium dark:text-gray-400 dark:group-hover:text-white transition-all capitalize">
                          {tag}
                        </span>
                        <span class="text-xs text-gray-300 group-hover:text-gray-500">
                          {tagCounts[tag]}
                        </span>
                      </a>
                    </li>
                  ))
                }
              </ul>
            </div>

            <div>
              <h3
                class="font-display text-lg font-medium mb-6 text-primary dark:text-white border-b border-gray-100 dark:border-gray-800 pb-2"
              >
                Recientes
              </h3>
              <ul class="space-y-6">
                {
                  recentPosts.map((post) => (
                    <li class="group cursor-pointer">
                      <span class="block text-[10px] uppercase font-bold text-gray-400 mb-1">
                        {post.data.tags ? post.data.tags[0] : "Articulo"}
                      </span>
                      <a href={`/blog/${slugifyStr(post.data.title)}/`}>
                        <h4 class="text-sm font-display font-medium text-secondary group-hover:text-primary dark:text-gray-400 dark:group-hover:text-white leading-tight transition-colors">
                          {post.data.title}
                        </h4>
                      </a>
                    </li>
                  ))
                }
              </ul>
            </div>
          </aside>

          <main class="flex-1">
            <div class="flex flex-col gap-16">
              {
                page.data.map((post) => (
                  <article class="group flex flex-col md:flex-row gap-8 items-start pb-12 border-b border-gray-100 dark:border-gray-800 last:border-0">
                    <div class="w-full md:w-1/3 aspect-[4/3] md:aspect-square lg:aspect-[4/3] bg-gray-100 dark:bg-gray-800 overflow-hidden relative">
                      <div class="w-full h-full">
                        <CoverBlog
                          imagePath={String(post.data.heroImage)}
                          altText={post.data.title}
                          class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-700 ease-out"
                        />
                      </div>
                      <div class="absolute inset-0 border border-black/5 dark:border-white/10 pointer-events-none" />
                    </div>

                    <div class="flex-1 flex flex-col items-start h-full">
                      <div class="flex items-center gap-3 mb-4">
                        <span class="px-2 py-1 border border-gray-200 dark:border-gray-700 text-[10px] font-bold uppercase tracking-widest text-primary dark:text-gray-300">
                          {post.data.tags ? post.data.tags[0] : "Blog"}
                        </span>
                      </div>
                      <a href={`/blog/${slugifyStr(post.data.title)}/`}>
                        <h3 class="text-2xl md:text-3xl font-display font-bold text-primary dark:text-white leading-tight mb-3 group-hover:underline decoration-1 underline-offset-4 cursor-pointer">
                          {post.data.title}
                        </h3>
                      </a>
                      <p class="text-base text-secondary dark:text-gray-400 mb-4 leading-relaxed line-clamp-3">
                        {post.data.description}
                      </p>
                      <div class="mt-auto w-full">
                        <div class="flex items-center gap-2 text-xs font-bold uppercase tracking-widest text-gray-400 mb-6">
                          <span>
                            {/* Author placeholder */} Presuposicionalismo
                          </span>
                          <span class="text-gray-300">•</span>
                          <span>
                            <FormattedDate date={post.data.pubDate} />
                          </span>
                        </div>
                        <a
                          href={`/blog/${slugifyStr(post.data.title)}/`}
                          class="inline-block px-6 py-3 border border-black dark:border-white text-primary dark:text-white text-xs font-bold uppercase tracking-widest hover:bg-black hover:text-white dark:hover:bg-white dark:hover:text-black transition-colors"
                        >
                          Leer más
                        </a>
                      </div>
                    </div>
                  </article>
                ))
              }
            </div>

            <Pagination
              currentPage={page.currentPage}
              totalPages={page.lastPage}
              prevUrl={page.url.prev}
              nextUrl={page.url.next}
            />
          </main>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
