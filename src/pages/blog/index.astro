---
import MainLayout from "@layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import Pagination from "@components/Pagination.astro";
import FeaturedPost from "@components/FeaturedPost.astro";
import PostGridItem from "@components/PostGridItem.astro";
import CategoryFilter from "@components/CategoryFilter.astro";
import { SITE_DESCRIPTION } from "../../consts";
import postFilter from "@utils/postFilter";

const allPosts = await getCollection("blog", postFilter);
const sortedPosts = allPosts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

// Paginate manually for first page
const pageSize = 7; // 1 Featured + 6 Grid
const currentPagePosts = sortedPosts.slice(0, pageSize);
const totalPages = Math.ceil(sortedPosts.length / pageSize);

const featuredPost = currentPagePosts[0];
const gridPosts = currentPagePosts.slice(1);

// Data for Sidebar (kept for Tags logic which is passed to CategoryFilter)
const tagCounts = allPosts.reduce(
  (acc: Record<string, number>, post) => {
    if (post.data.tags) {
      post.data.tags.forEach((tag) => {
        acc[tag] = (acc[tag] || 0) + 1;
      });
    }
    return acc;
  },
  {} as Record<string, number>,
);

const sortedTags = Object.keys(tagCounts)
  .sort((a, b) => tagCounts[b] - tagCounts[a])
  .slice(0, 10); // Top 10 tags for filter
---

<MainLayout title="Artículos" description={SITE_DESCRIPTION}>
  <div class="layout-container flex flex-col min-h-screen">
    <div class="px-6 md:px-12 lg:px-24 py-16">
      <div class="max-w-7xl mx-auto">
        <div class="mb-12 text-center max-w-4xl mx-auto">
          <span
            class="block text-xs font-bold uppercase tracking-[0.2em] text-accent mb-4"
            >Blog & Ensayos</span
          >
          <h1
            class="text-5xl md:text-7xl font-display font-medium text-primary dark:text-white mb-6 leading-tight"
          >
            Artículos
          </h1>
          <p
            class="text-lg md:text-xl text-secondary dark:text-gray-400 font-display italic leading-relaxed"
          >
            Exploraciones profundas sobre la fe, la razón y la presuposición,
            analizando la cultura desde una óptica consistentemente reformada.
          </p>
        </div>

        <CategoryFilter tags={sortedTags} />

        <div class="space-y-16">
          {/* Featured Post */}
          {featuredPost && <FeaturedPost post={featuredPost} />}

          {/* Grid Layout */}
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-12">
            {gridPosts.map((post) => <PostGridItem post={post} />)}
          </div>
        </div>

        <div class="mt-20">
          <Pagination
            currentPage={1}
            totalPages={totalPages}
            prevUrl={undefined}
            nextUrl={totalPages > 1 ? "/blog/page/2" : undefined}
          />
        </div>
      </div>
    </div>
  </div>
</MainLayout>
