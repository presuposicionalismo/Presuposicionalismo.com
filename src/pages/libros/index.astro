---
import MainLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import BookList from "@components/BookList.astro";

import { SITE_DESCRIPTION } from "../../consts";
const books = (await getCollection("libros")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<MainLayout
  title="Libros"
  description={SITE_DESCRIPTION}
  pubDate={new Date("August 08 2021")}
  heroImage="/blog-placeholder-about.jpg"
>
  <main class="max-w-7xl mx-auto px-6 py-20">
    <section class="text-center mb-20">
      <h1
        class="serif-text text-5xl md:text-6xl font-medium text-accent mb-6 leading-tight"
      >
        Biblioteca Reformada
      </h1>
      <p class="text-xl text-muted max-w-2xl mx-auto leading-relaxed">
        Una colección curada de recursos apologéticos y teológicos para edificar
        la mente y el corazón.
      </p>
    </section>

    <section>
      <BookList books={books} />
    </section>
  </main>
</MainLayout>
