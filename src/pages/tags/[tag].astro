---
import MainLayout from "@layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import PostGridItem from "@components/PostGridItem.astro";
import CategoryFilter from "@components/CategoryFilter.astro";

import postFilter from "@utils/postFilter";
import { slugifyStr } from "@utils/slugify";

export async function getStaticPaths() {
  const allPosts = await getCollection("blog", postFilter);

  const uniqueTags = [
    ...new Set(allPosts.map((post) => post.data.tags).flat()),
  ].filter((tag): tag is string => !!tag);

  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts.filter((post) =>
      post.data.tags?.includes(tag as string),
    );
    const sortedPosts = filteredPosts.sort(
      (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
    );

    return {
      params: { tag: slugifyStr(tag) },
      props: { tag, posts: sortedPosts },
    };
  });
}

const { tag, posts } = Astro.props;

// Calculate all tags for the filter
const allPosts = await getCollection("blog", postFilter);
const tagCounts = allPosts.reduce(
  (acc: Record<string, number>, post) => {
    if (post.data.tags) {
      post.data.tags.forEach((t) => {
        acc[t] = (acc[t] || 0) + 1;
      });
    }
    return acc;
  },
  {} as Record<string, number>,
);

const sortedTags = Object.keys(tagCounts)
  .sort((a, b) => tagCounts[b] - tagCounts[a])
  .slice(0, 10);
---

<MainLayout
  title={`Etiqueta: ${tag}`}
  description={`Artículos etiquetados con ${tag}`}
>
  <div class="layout-container flex flex-col min-h-screen">
    <div class="px-6 md:px-12 lg:px-24 py-16">
      <div class="max-w-7xl mx-auto">
        <div class="mb-12 text-center max-w-4xl mx-auto">
          <span
            class="block text-xs font-bold uppercase tracking-[0.2em] text-accent mb-4"
            >Explorar por Tema</span
          >
          <h1
            class="text-4xl md:text-6xl font-display font-medium text-primary dark:text-white mb-6 leading-tight capitalize"
          >
            {tag}
          </h1>
          <p
            class="text-lg md:text-xl text-secondary dark:text-gray-400 font-display italic leading-relaxed"
          >
            {posts.length}
            {
              posts.length === 1
                ? "artículo encontrado"
                : "artículos encontrados"
            }
          </p>
        </div>

        <CategoryFilter tags={sortedTags} activeTag={tag} />

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-12 mt-12">
          {posts.map((post) => <PostGridItem post={post} />)}
        </div>
      </div>
    </div>
  </div>
</MainLayout>
