---
import MainLayout from "@layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

import postFilter from "@utils/postFilter";
import { slugifyStr } from "@utils/slugify";

const allPosts = await getCollection("blog", postFilter);
const tagCounts = allPosts.reduce(
  (acc: Record<string, number>, post) => {
    if (post.data.tags) {
      post.data.tags.forEach((tag) => {
        acc[tag] = (acc[tag] || 0) + 1;
      });
    }
    return acc;
  },
  {} as Record<string, number>,
);

const tags = Object.entries(tagCounts).sort((a, b) => b[1] - a[1]);
---

<MainLayout
  title="Etiquetas"
  description="Explora todos los temas y categorías."
>
  <div class="layout-container flex flex-col min-h-screen">
    <div class="px-6 md:px-12 lg:px-24 py-16">
      <div class="max-w-4xl mx-auto">
        <div class="mb-12 text-center">
          <span
            class="block text-xs font-bold uppercase tracking-[0.2em] text-accent mb-4"
            >Temas</span
          >
          <h1
            class="text-4xl md:text-6xl font-display font-medium text-primary dark:text-white mb-6 leading-tight"
          >
            Etiquetas
          </h1>
          <p
            class="text-lg md:text-xl text-secondary dark:text-gray-400 font-display italic leading-relaxed"
          >
            Todos los temas tratados en nuestros artículos.
          </p>
        </div>

        <div class="flex flex-wrap justify-center gap-4">
          {
            tags.map(([tag, count]) => (
              <a
                href={`/tags/${slugifyStr(tag)}`}
                class="group flex items-center gap-2 px-6 py-3 rounded-full bg-surface border border-border hover:border-accent hover:shadow-lg hover:shadow-accent/10 transition-all duration-300"
              >
                <span class="font-medium text-lg text-primary dark:text-white group-hover:text-accent transition-colors capitalize">
                  {tag}
                </span>
                <span class="text-sm font-bold text-secondary dark:text-gray-400 group-hover:text-accent/80 transition-colors">
                  {count}
                </span>
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</MainLayout>
