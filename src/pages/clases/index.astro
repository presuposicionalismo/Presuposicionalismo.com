---
import MainLayout from "@layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import ClassGridItem from "@components/ClassGridItem.astro";
import { SITE_DESCRIPTION } from "../../consts";

const allClases = await getCollection("clases");
const sortedClases = allClases.sort((a, b) => a.data.order - b.data.order);
---

<MainLayout title="Clases" description={SITE_DESCRIPTION}>
  <div class="layout-container flex flex-col min-h-screen">
    <div class="px-6 md:px-12 lg:px-24 py-16">
      <div class="max-w-7xl mx-auto">
        <div class="mb-12 text-center max-w-4xl mx-auto">
          <span
            class="block text-xs font-bold uppercase tracking-[0.2em] text-accent mb-4"
            >Educación</span
          >
          <h1
            class="text-5xl md:text-7xl font-display font-medium text-primary dark:text-white mb-6 leading-tight"
          >
            Programa de Estudio
          </h1>
          <p
            class="text-lg md:text-xl text-secondary dark:text-gray-400 font-display italic leading-relaxed"
          >
            Aprende apologética de forma dinámica y participativa.
          </p>
        </div>

        <div class="space-y-16">
          {/* Grid Layout */}
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-12">
            {sortedClases.map((clase) => <ClassGridItem post={clase} />)}
          </div>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
