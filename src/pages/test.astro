---
// @ts-nocheck
import MainLayout from "@layouts/BaseLayout.astro";
import { Button } from "$lib/components/ui/button";
import { Badge } from "$lib/components/ui/badge";
import * as Card from "$lib/components/ui/card";
import { Separator } from "$lib/components/ui/separator";

const title = "Design System Showcase";
const description = "A visual exploration of our new components and styles.";
---

<MainLayout title={title} description={description}>
  <div class="max-w-6xl mx-auto px-6 py-24 space-y-24">
    <!-- Hero / Intro -->
    <section class="max-w-3xl animate-in-view">
      <div
        class="inline-flex items-center gap-2 mb-6 px-3 py-1 rounded-full bg-accent/10 text-accent border border-accent/20"
      >
        <span class="w-2 h-2 rounded-full bg-accent animate-pulse"></span>
        <span class="text-xs font-bold tracking-wider uppercase"
          >Design System</span
        >
      </div>
      <h1
        class="serif-text text-5xl md:text-7xl font-medium mb-6 text-foreground tracking-tight"
      >
        Building with <span class="italic text-accent">Precision</span>.
      </h1>
      <p class="text-xl text-muted leading-relaxed max-w-2xl">
        A collection of reusable components and patterns designed to create
        distinctive, high-quality digital experiences.
      </p>
      <div class="flex gap-4 mt-8">
        <Button size="lg" client:load>Get Started</Button>
        <Button variant="outline" size="lg" client:load
          >View Documentation</Button
        >
      </div>
    </section>

    <Separator class="my-12" />

    <!-- Components Grid -->
    <section class="space-y-12">
      <div class="flex items-end justify-between animate-in-view">
        <div>
          <h2 class="serif-text text-3xl font-medium mb-2">
            Interface Elements
          </h2>
          <p class="text-muted">Core building blocks for user interaction.</p>
        </div>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Buttons Card -->
        <Card.Root class="animate-in-view" client:load>
          <Card.Header>
            <Card.Title>Buttons</Card.Title>
            <Card.Description
              >Primary, secondary, and ghost variants.</Card.Description
            >
          </Card.Header>
          <Card.Content class="space-y-4">
            <div class="flex flex-wrap gap-2">
              <Button client:load>Primary</Button>
              <Button variant="secondary" client:load>Secondary</Button>
              <Button variant="outline" client:load>Outline</Button>
            </div>
            <div class="flex flex-wrap gap-2">
              <Button variant="destructive" client:load>Destructive</Button>
              <Button variant="ghost" client:load>Ghost</Button>
              <Button variant="link" client:load>Link</Button>
            </div>
          </Card.Content>
        </Card.Root>

        <!-- Badges Card -->
        <Card.Root class="animate-in-view" client:load>
          <Card.Header>
            <Card.Title>Badges</Card.Title>
            <Card.Description
              >Labels for status and categories.</Card.Description
            >
          </Card.Header>
          <Card.Content class="flex flex-wrap gap-2">
            <Badge client:load>Default</Badge>
            <Badge variant="secondary" client:load>Secondary</Badge>
            <Badge variant="outline" client:load>Outline</Badge>
            <Badge variant="destructive" client:load>Destructive</Badge>
          </Card.Content>
        </Card.Root>

        <!-- Typography Card -->
        <Card.Root class="animate-in-view" client:load>
          <Card.Header>
            <Card.Title>Typography</Card.Title>
            <Card.Description>Headings and body text styles.</Card.Description>
          </Card.Header>
          <Card.Content class="space-y-4">
            <h3 class="scroll-m-20 text-2xl font-semibold tracking-tight">
              The Joke Tax Chronicles
            </h3>
            <p class="leading-7 [&:not(:first-child)]:mt-6 text-muted">
              Once upon a time, in a far-off land, there was a very lazy king
              who spent all day lounging on his throne.
            </p>
          </Card.Content>
        </Card.Root>
      </div>
    </section>

    <!-- Colors Section -->
    <section class="space-y-8 animate-in-view">
      <h2 class="serif-text text-3xl font-medium">Color Palette</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="space-y-2">
          <div class="h-24 rounded-lg bg-background border shadow-sm"></div>
          <div class="text-sm font-medium">Background</div>
        </div>
        <div class="space-y-2">
          <div class="h-24 rounded-lg bg-surface border shadow-sm"></div>
          <div class="text-sm font-medium">Surface</div>
        </div>
        <div class="space-y-2">
          <div class="h-24 rounded-lg bg-primary shadow-sm"></div>
          <div class="text-sm font-medium">Primary</div>
        </div>
        <div class="space-y-2">
          <div class="h-24 rounded-lg bg-accent shadow-sm"></div>
          <div class="text-sm font-medium">Accent</div>
        </div>
      </div>
    </section>

    <!-- Scroll Animation Demo -->
    <section class="py-24 space-y-12">
      <div class="text-center max-w-2xl mx-auto space-y-4 animate-in-view">
        <Badge variant="outline" class="uppercase tracking-widest" client:load
          >Motion</Badge
        >
        <h2 class="serif-text text-4xl md:text-5xl font-medium">
          Fluid Interactions
        </h2>
        <p class="text-muted text-lg">
          Scroll down to see our staggered animation system in action.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {
          Array.from({ length: 6 }).map((_, i) => (
            <Card.Root
              class="animate-in-view hover:shadow-lg transition-all duration-300 group cursor-pointer"
              client:load
            >
              <div class="aspect-video bg-muted/20 relative overflow-hidden">
                <div class="absolute inset-0 bg-accent/5 group-hover:bg-accent/10 transition-colors" />
                <div class="absolute inset-0 flex items-center justify-center text-4xl font-bold text-accent/20 group-hover:scale-110 transition-transform duration-500">
                  {i + 1}
                </div>
              </div>
              <Card.Header>
                <Card.Title class="group-hover:text-accent transition-colors">
                  Animated Card {i + 1}
                </Card.Title>
                <Card.Description>
                  This card uses the view-timeline API for smooth entry.
                </Card.Description>
              </Card.Header>
            </Card.Root>
          ))
        }
      </div>
    </section>
  </div>
</MainLayout>
