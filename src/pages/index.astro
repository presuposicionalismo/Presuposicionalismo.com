---
import MainLayout from "@layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import FormattedDate from "@components/FormattedDate.astro";
import CoverBlog from "@components/CoverBlog.astro";
import { slugifyStr } from "@utils/slugify";

const allPosts = await getCollection("blog");
const sortedPosts = allPosts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

// Featured post (latest)
const featuredPost = sortedPosts[0];
// Next 3 posts for grid
const gridPosts = sortedPosts.slice(1, 4);
---

<MainLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <section class="max-w-4xl mx-auto px-6 py-24 md:py-32 text-center">
    <h1
      class="serif-text text-4xl md:text-6xl font-medium leading-tight mb-8 text-accent"
    >
      ¿Estás preparado para algo intelectualmente <span class="italic"
        >estimulante</span
      > y conmovedor para el alma?
    </h1>
    <div class="space-y-6 text-lg text-muted leading-relaxed font-light">
      <p>
        Este sitio está dedicado a promover literatura que suscribe una
        filosofía distintivamente cristiana y principalmente a la metodología
        apologética del "padre del presuposicionalismo", el fallecido (1987) Dr.
        Cornelius Van Til, y sus estudiantes, el fallecido (1995) Dr. Greg L.
        Bahnsen, y el Dr. John M. Frame.
      </p>
      <p>
        Otros "vantilianos" de interés incluyen pero no se limitan a: James
        Anderson, William Edgar, Scott Oliphint, James White, y Richard Pratt.
        De cualquier manera, ¡que Dios lo bendiga ricamente a través de este
        pequeño sitio que existe para promover la gloria de Dios solamente!
      </p>
    </div>
    <div class="mt-12">
      <a
        href="#blog"
        class="inline-flex items-center gap-2 px-8 py-3 bg-accent text-background font-medium hover:opacity-90 transition-opacity"
      >
        Explorar Contenido
        <span class="material-icons-outlined text-sm">arrow_downward</span>
      </a>
    </div>
  </section>

  <section
    id="blog"
    class="max-w-7xl mx-auto px-6 py-20 border-t border-border"
  >
    <div class="flex items-center justify-between mb-12">
      <h2 class="serif-text text-3xl font-medium text-accent">
        Últimas entradas del Blog
      </h2>
      <div class="flex gap-4">
        <!-- Visual arrows (functional if we add carousel logic later) -->
        <a
          href="/blog"
          class="w-10 h-10 rounded-full border border-border flex items-center justify-center hover:bg-surface transition-colors"
        >
          <span class="material-icons-outlined">chevron_right</span>
        </a>
      </div>
    </div>

    <!-- Featured Post -->
    {
      featuredPost && (
        <div class="relative group mb-12">
          <div class="bg-surface rounded-lg overflow-hidden shadow-sm border border-border grid md:grid-cols-2 min-h-[400px]">
            <div class="relative overflow-hidden">
              <div class="absolute inset-0 w-full h-full">
                <CoverBlog
                  imagePath={String(featuredPost.data.heroImage)}
                  altText={featuredPost.data.title}
                  class="w-full h-full object-cover grayscale hover:grayscale-0 transition-all duration-700 scale-105 group-hover:scale-100"
                  loading="eager"
                />
              </div>
              <div class="absolute inset-0 bg-accent/10" />
            </div>
            <div class="p-10 md:p-16 flex flex-col justify-center">
              <div class="flex items-center gap-2 text-muted text-sm mb-4 uppercase tracking-widest font-medium">
                <span class="material-icons-outlined text-base">
                  calendar_today
                </span>
                <FormattedDate date={featuredPost.data.pubDate} />
              </div>
              <h3 class="serif-text text-3xl md:text-4xl text-accent mb-6 hover:opacity-80 transition-opacity cursor-pointer">
                <a href={`/blog/${slugifyStr(featuredPost.data.title)}/`}>
                  {featuredPost.data.title}
                </a>
              </h3>
              <p class="text-muted text-lg leading-relaxed mb-8 line-clamp-3">
                {featuredPost.data.description}
              </p>
              <div>
                <a
                  href={`/blog/${slugifyStr(featuredPost.data.title)}/`}
                  class="inline-flex items-center gap-2 font-medium text-accent border-b border-accent/20 pb-1 hover:border-accent transition-all"
                >
                  Leer artículo completo
                  <span class="material-icons-outlined text-sm">
                    arrow_forward
                  </span>
                </a>
              </div>
            </div>
          </div>
        </div>
      )
    }

    <!-- Grid Posts -->
    <div class="grid md:grid-cols-3 gap-8 mt-12">
      {
        gridPosts.map((post) => (
          <div class="space-y-4 group">
            <div class="aspect-video overflow-hidden rounded-lg bg-surface">
              <a href={`/blog/${slugifyStr(post.data.title)}/`}>
                <CoverBlog
                  imagePath={String(post.data.heroImage)}
                  altText={post.data.title}
                  class="w-full h-full object-cover grayscale opacity-80 group-hover:opacity-100 group-hover:scale-105 transition-all duration-500"
                />
              </a>
            </div>
            <span class="text-xs font-bold text-muted tracking-tighter uppercase">
              <FormattedDate date={post.data.pubDate} />
            </span>
            <h4 class="serif-text text-xl text-accent group-hover:underline underline-offset-4 decoration-1">
              <a href={`/blog/${slugifyStr(post.data.title)}/`}>
                {post.data.title}
              </a>
            </h4>
          </div>
        ))
      }
    </div>
  </section>
</MainLayout>
